<html>
	<head>
		<title>
			items
		</title>
		<link rel="stylesheet" type="text/css" href="style.css">
		<script src="./jquery.js"></script>
	</head>
	<body>
		<script>
			function get_Filters(){
				var min = document.getElementsByName("min")[0].value;
				var max = document.getElementsByName("max")[0].value;
				var category = location.search.split("=")
				var category=category[category.length-1]
				location.href="/filter_products?min="+min+"&max="+max+"&category="+category;
			}
		</script>
		<div class="screen1 left">
			<p align="center">FILTERS</p>
			<p class="filter_text">Price</p>
			<div>
				<input type="number" name="min" min="10" max="100000" value="100" placeholder="min" style="margin-left:10%">
				<input type="number" name="max" min="10" max="100000" value="100000" placeholder="max">
			</div>
			<div class="dropdown">
				<button class="dropbtn">Offer</button>
				<div class="dropdown-content">
				<a href="#">< 10%</a>
				<a href="#">10% - 20%</a>
				<a href="#">20% - 30%</a>
				<a href="#">30% - 50%</a>
				<a href="#">50% - 70%</a>
				<a href="#">> 70%</a>
				</div>
			</div>
			<a href="#" onclick="get_Filters()">Filter</a>
		</div>
		<div class="screen1 right">
			{{#each data}}
			<div class="flip-card">
 			 	<div class="flip-card-inner">
    				<div class="flip-card-front">
      					<img src={{this.imgpath}} alt="Avatar" class="img_card">
						<h4><b>{{this.name}}</b></h4>
					</div>
    				<div class="flip-card-back">
      					<h4><b>{{this.name}}</b></h4> 
						<p>Category : {{this.category}}</p>
						<p>Price : {{this.price}}</p>
						<p>Offer : {{this.offer}}%</p>
						<p>Description : {{this.description}}</p>
						<button class="button_add">Add to Cart</button>
					</div>
				</div>
  			</div>
			{{/each}}
		</div>
	</body>
</html>









